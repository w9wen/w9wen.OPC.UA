    xmlns:gauge="clr-namespace:Syncfusion.SfGauge.XForms;assembly=Syncfusion.SfGauge.XForms"
    Title="{Binding Title}">
    <ContentPage.Content>
        <Grid>

            <!--#region 抬頭-->
            <StackLayout
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="Center"
                VerticalOptions="Center">

                <Label
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="ARCH.PA3000"
                    VerticalOptions="Center" />

                <StackLayout Orientation="Horizontal">
                    <Label
                        FontSize="16"
                        HorizontalOptions="End"
                        Text="讀取時間:" />
                    <Label
                        FontSize="16"
                        HorizontalOptions="Start"
                        Text="{Binding ReadDateTime}" />
                </StackLayout>
            </StackLayout>
            <!--#endregion 抬頭-->

            <!--#region Vel-->
            <gauge:SfCircularGauge
                Grid.Row="1"
                Grid.Column="0"
                Margin="10">
                <gauge:SfCircularGauge.Headers>
                    <gauge:Header
                        ForegroundColor="BlueViolet"
                        Text="Vel"
                        TextSize="20" />
                </gauge:SfCircularGauge.Headers>
                <gauge:SfCircularGauge.Scales>
                    <gauge:Scale EndValue="233" StartValue="231">
                        <gauge:Scale.Ranges>
                            <gauge:Range
                                EndValue="232"
                                StartValue="231"
                                Color="Green" />
                            <gauge:Range
                                EndValue="232.5"
                                StartValue="232"
                                Color="Orange" />
                            <gauge:Range
                                EndValue="233"
                                StartValue="232.5"
                                Color="Red" />
                        </gauge:Scale.Ranges>
                        <gauge:Scale.Pointers>
                            <gauge:MarkerPointer Value="232.5" />
                            <gauge:NeedlePointer Value="{Binding Vel}" />
                            <gauge:RangePointer Value="233" />
                        </gauge:Scale.Pointers>
                    </gauge:Scale>
                </gauge:SfCircularGauge.Scales>
            </gauge:SfCircularGauge>

            <gauge:SfDigitalGauge
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="White"
                CharacterHeight="12"
                CharacterStrokeColor="#146CED"
                CharacterType="EightCrossEightDotMatrix"
                CharacterWidth="12"
                DisabledSegmentColor="LightSkyBlue"
                HeightRequest="22"
                HorizontalOptions="Center"
                SegmentStrokeWidth="5"
                VerticalOptions="Center"
                Value="{Binding Vel}" />
